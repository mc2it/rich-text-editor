{
	"metadata": {
		"logo": "favicon.svg",
		"title": "MC2IT Rich Text Editor"
	},
	"opts": {
		"destination": "docs",
		"readme": "README.md",
		"recurse": true,
		"template": "node_modules/tidy-jsdoc"
	},
	"plugins": ["plugins/markdown"],
	"source": {"include": ["lib"]},
	"sourceType": "module",
	"tags": {
		"allowUnknownTags": false,
		"dictionaries": ["jsdoc"]
	},
	"templates": {
		"default": {
			"includeDate": false,
			"staticFiles": {"include": ["www/favicon.ico", "www/favicon.svg"]}
		}
	}
}
